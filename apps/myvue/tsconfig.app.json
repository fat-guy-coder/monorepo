{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "rg.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"]
    },
    // 关键配置：启用提案阶段的语法
    "lib": ["ESNext", "DOM"],
    "plugins": [{ "name": "typescript-plugin-proposal-pipeline" }]
  }
}
